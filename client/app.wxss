/**app.wxss**/

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.marquee {
  display: block;
  width: 100%;
  height: 60rpx;
}

.marquee_box {
  width: 100%;
  position: relative;
}

.marquee_text {
  /* background: red; */
  white-space: nowrap;
  position: absolute;
  top: 0;
}

.bar {
  display: flex;
  flex-direction: row;
  height: 40px;
  width: 100%;
  padding: 5px;
  justify-content: center;
  align-items: center;
}

.btn {
  width: 30%;
  height: 30px;
  padding: 5px;
  /* opacity: 0.5;  */
  color: #fff;
  font-size: 20px;
  background: #ccc;
  text-align: center;
  border: #ccc 1px solid;
}

.l-btn {
  border-top-left-radius: 30px;
  border-bottom-left-radius: 30px;
}

.r-btn {
  border-top-right-radius: 30px;
  border-bottom-right-radius: 30px;
}

.active {
  background: #39c;
  border: #39c 1px solid;
}
