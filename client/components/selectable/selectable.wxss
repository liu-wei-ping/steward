/* components/selectable.wxss */

.wx-mask {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
}

.selectable-box {
  position: fixed;
  /* display: flex;
  justify-content: flex-start;
  flex-direction: column; */
  z-index: 5000;
  /* width: 50%;
  height: 20%; *//* max-height: 600rpx;
  max-width: 600rpx; */
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #fff;
  text-align: center;
  border-radius: 3px;
  padding: 10px;
  overflow: hidden;
}

.group {
  display: flex;
  flex-direction: column;
  margin: 10rpx auto;
}

.label {
  display: flex;
  flex-direction: row;
  margin: 10rpx auto;
}

.label-icon {
  background: #000;
  width: 15px;
  height: 15px;
  padding: 5rpx;
}

.icon {
  background: #fff;
  width: 15px;
  height: 15px;

}
.checked{
  background: #1aad19;
}
.label-box {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
  border-bottom: #ccc 1px solid;
}

.label-image {
  display: flex;
  align-items: flex-end;
  margin: auto 10rpx;
}

.image {
  height: 25px;
  width: 25px;
  border-radius: 50%;
}

.label-text {
  width: 80%;
}
