/* components/selectable.wxss */

.selectable {
  width: 100%;
}

.wx-mask {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
}
.default-selectable{
  min-height: 100px;
  background:#fff; 
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
  color: #8b8b8b;
}
.selectable-box {
  position: fixed;
  display: flex;
  justify-content: center;
  flex-direction: column;
  z-index: 2000;
  /* top: 50%; *//* left: 50%;
  right: 50%; *//* -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%); */
  bottom: 0;
  background: #ccc;
  text-align: center;
  /* border-radius: 3px; */
  max-height: 300px;
  overflow: hidden;
}

.selectable-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding:15px; 
  margin: 0 auto;
}

.even {
  background: #ebf6f7;
}

.odd {
  background: #fff;
}

.label {
  display: flex;
  flex-direction: row;
  /* margin: 10rpx auto; */
}

.label-icon {
  background: #000;
  width: 15px;
  height: 15px;
  padding: 5rpx;
}

.icon {
  background: #fff;
  width: 15px;
  height: 15px;
}

.checked {
  background: #1aad19;
}

.label-box {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
  border-bottom: #ccc 1px solid;
}

.label-image {
  display: flex;
  align-items: flex-end;
  margin: auto 10rpx;
}

.image {
  height: 25px;
  width: 25px;
  border-radius: 50%;
}

