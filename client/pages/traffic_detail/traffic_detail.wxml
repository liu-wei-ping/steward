<!--pages/traffic_detail/traffic_detail.wxml-->
<view class='tfc-strategy'>
  <view>
    <block wx:if="{{strategy==0}}">
      <text>公交</text>
    </block>
    <block wx:if="{{strategy==1}}">
      <text>自驾</text>
    </block>
    <block wx:if="{{strategy==2}}">
      <text>骑行</text>
    </block>
    <block wx:if="{{strategy==3}}">
      <text>步行</text>
    </block>
  </view>
</view>
<view class='tfc-map'>
  <map show-location="{{true}}" scale="12" longitude="{{121.475424}}" latitude="{{31.191984}}" markers="{{markers}}" polyline="{{polyline}}">
  </map>
</view>
<view class='tfc-digest'>
  <view>
    距离:
    <text class='distance'>{{distance}}</text> 米
  </view>
  <view wx:if="{{strategy==0 || strategy==1}}">
    打车费大约:
    <text class='cost'>{{taxi_cost}}</text> 元
  </view>
  <view wx:else>
    预计时间:
    <text class='cost'>{{duration}}</text> 分钟
  </view>
</view>
<view class='tfc-detail'>
  <scroll-view scroll-y class='detail-scroll'>
    <block wx:if="{{strategy==0}}">
      <view class="text_box" wx:for="{{transits}}" wx:for-item="item" wx:key="key">
        <text class="text_item" wx:for="{{item.transport}}" wx:for-item="j" wx:key="uk">
    {{j}}
  </text>
      </view>
    </block>
    <block wx:if="{{strategy==1}}">
      <view class="text_box" wx:for="{{steps}}" wx:for-item="i" wx:key="key">
        {{i.instruction}}
      </view>
    </block>
    <block wx:if="{{strategy==2}}">
      <view class="text_box" wx:for="{{steps}}" wx:for-item="i" wx:key="key">
        {{i.instruction}}
      </view>
    </block>
    <block wx:if="{{strategy==3}}">
      <view class="text_box" wx:for="{{steps}}" wx:for-item="i" wx:key="key">
        {{i.instruction}}
      </view>
    </block>
  </scroll-view>
</view>