/* pages/working/working.wxss */

pag {
  display: flex;
  flex-direction: column;
}

.task-tip {
  display: flex;
  position: fixed;
  align-items: center;
  justify-content: center;
  height: 40%;
  width: 100%;
  background: #ccc;
}

.circle-out {
  position: relative;
  width: 200px;
  height: 200px;
  max-width: 90%;
  max-height: 90%;
  border-radius: 50%;
  background-color: #415cab;
}

.circle-in {
  display: flex;
  flex-direction: column;
  position: absolute;
  width: 190px;
  height: 190px;
  max-width: 90%;
  max-height: 90%;
  border-radius: 50%;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  background-color: #fff;
  justify-content: center;
  align-items: center;
}

.tip {
  text-align: center;
  padding: 10rpx;
  width: 100%;
}

.task-list {
  position: fixed;
  top: 40%;
  height: 50%;
  width: 100%;
}

.task-btn {
  position: fixed;
  top: 90%;
  height: 10%;
  width: 100%;
}

.task {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  height: 60px;
  margin: 10px 0;
}

.t-delete {
  height: 10px;
  margin-bottom: 50px;
  color: #ccc;
  width: 5%;
}

.t-input {
  border-bottom: #ccc 1px solid;
  width: 75%;
}

.t-save {
  display: flex;
  flex-direction: row;
  text-align: right;
  width: 25%;
}

