/* pages/statistic/statistic.wxss */

.calendar-box {
  padding: 15px;
}

.calendar {
  background-color: white;
  padding-top: 10px;
  border-radius: 15px;
}

.header {
  font-size: large;
  color: #000;
}

.header>text:nth-child(1)::before {
  content: '<上一月';
  color: #000;
}

.header>text:nth-child(3)::before {
  content: '下一月>';
  color: #000;
}

.board {
  color: #000;
  font-weight: bold;
}

.tips-box {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.v-tip {
  border-radius: 50%;
  background: #84e7d0 !important;
  width: 40px;
  height: 40px;
  line-height: 40px;
  text-align: center;
  font-size: 12px;
  font-weight: 800;
  color: #fff;
  margin: 1px;
}

.normal {
  background: #177cb0 !important;
}

.warn {
  background: #f00056 !important;
}

.message-box {
  margin: 10px 10px 10px 10px;
  padding: 20px;
  border: #ccc 1px solid;
  border-radius: 10px;
  font-size: 20px;
  font-weight: 800;
}
