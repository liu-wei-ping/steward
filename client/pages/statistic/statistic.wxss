/* pages/statistic/statistic.wxss */

.my-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background: #00abff;
  color: #fff;
  align-items: center;
  height: 80px;
  z-index: 1;
}

.avatar-box {
  width: 25%;
}

.my-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.info-box {
  width: 55%;
}

.setting-box {
  display: flex;
  flex-direction: row;
  width: 20%;
  font-size: 18px;
}

.calendar-box {
  margin: 80px auto;
  padding: 0px 8px 0px 8px;
  height: 290px;
}

.calendar {
  background-color: white;
  border-radius: 15px;
}

.header {
  margin: 80px auto;
  font-size: large;
  color: #000;
}

.header>text:nth-child(1)::before {
  content: '<上一月';
  color: #000;
}

.header>text:nth-child(3)::before {
  content: '下一月>';
  color: #000;
}

.board {
  color: #000;
  font-weight: bold;
}

.tips-box {
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin: 5px 0px 5px 0px;
}

.v-tip {
  border-radius: 50%;
  background: #84e7d0 !important;
  width: 40px;
  height: 40px;
  line-height: 40px;
  text-align: center;
  font-size: 12px;
  font-weight: 800;
  color: #fff;
  margin: 1px;
}

.normal {
  background: #00bc12 !important;
}

.warn {
  background: #f00056 !important;
}

.work {
  background: #4b5cc4 !important;
}

.message-box {
  margin: 0px 10px 0px 10px;
  padding: 20px;
  border: #ccc 1px solid;
  border-radius: 10px;
  font-size: 20px;
  font-weight: 800;
}

.message-box >view {
  padding: 5px;
  border-bottom: #ccc 1rpx solid;
}

.message-box >view:nth-child(1) {
  color: #f00056;
}

.message-box >view:nth-child(2) {
  color: #00bc12;
}

.message-box >view:nth-child(3) {
  color: #4b5cc4;
}
