<!--pages/statistic/setting.wxml-->
<form bindsubmit="formSubmit">
  <view class='view-box'>
    <scroll-view scroll-y class='setting-scroll'>
      <view class='info-text'>
        <text>个人资料</text>
      </view>
      <view class='info-box'>
        <view class='flex-box' bindtap='changeAvatar'>
          <view class='flex-item'>
            <text>头像</text>
          </view>
          <view class=''>
            <image name="avatar_url" src='{{avatar_url}}' class='my-avatar'></image>
          </view>
          <view>></view>
        </view>
        <view class='flex-box'>
          <view>
            <text>昵称</text>
          </view>
          <view>
            <input name="nick_name" placeholder='昵称' value='{{nick_name}}'></input>
          </view>
          <view>></view>
        </view>
        <view class='flex-box'>
          <view>
            <text>真实姓名</text>
          </view>
          <view>
            <input name="real_name" placeholder='真实姓名' value='{{real_name}}'></input>
          </view>
          <view>></view>
        </view>
        <view class='flex-box'>
          <view>
            <text>手机号码</text>
          </view>
          <view>
            <input name="mobile_phone" placeholder='手机号码' type='number' maxlength="11" value='{{mobile_phone}}'></input>
          </view>
          <view>></view>
        </view>
        <picker mode="date" value="{{birthday}}" start="1900-01-01" bindchange="bindDateChange">
          <view class='flex-box'>
            <view>
              <text>出生日期</text>
            </view>
            <view>
              <text name="birthday" style="{{birthday?'':'color:#8B8B8B;'}}">{{birthday?birthday:'出生日期'}}</text>
            </view>
            <view>></view>
          </view>
        </picker>
        <view class='flex-box'>
          <view class='flex-item'>
            <text>邮箱</text>
          </view>
          <view>
            <input name="e_mail" placeholder='邮箱' value='{{e_mail}}'></input>
          </view>
          <view>></view>
        </view>
        <view class='flex-box' bindtap='changeGender'>
          <view>
            <text>性别</text>
          </view>
          <view>
            <text>{{gender==0?'男':'女'}}</text>
            <input hidden name="gender" value='{{gender}}'></input>
          </view>
          <view>></view>
        </view>
        <view class='flex-box' data-type='0' bindtap='changeAddress'>
          <view>
            <text>常住地址</text>
          </view>
          <view class='address'>
            <text style="{{family_region?'':'color:#8B8B8B;'}}">{{family_region?family_region:'省、市、区'}}</text>
            <text style="{{family_address?'':'color:#8B8B8B;'}}">{{family_address?family_address:'常住地址'}}</text>
            <input hidden name="family_address" value='{{family_address}}'></input>
            <input hidden  name="family_loaction" value='{{family_loaction}}'></input>
          </view>
          <view>></view>
        </view>
      </view>
      <view class='info-text'>
        <text>权限设置</text>
      </view>
      <view class='info-box'>
        <view class='flex-box'>
          <view>
            <text>对同事公开</text>
          </view>
          <view style='width:70%;'>
            <switch name="open" color="#00abff" checked bindchange="switchChange" />
          </view>
        </view>
      </view>
      <view class='info-text'>
        <text>公司资料</text>
      </view>
      <view class='info-box'>
        <view class='flex-box'>
          <view>
            <text>公司名称</text>
          </view>
          <view>
            <input name="company_name" placeholder='公司名称' value='{{company_name}}'></input>
          </view>
          <view>></view>
        </view>
        <view class='flex-box' data-type='1' bindtap='changeAddress'>
          <view>
            <text>地址</text>
          </view>
          <view class='address'>
            <text style="{{company_region?'':'color:#8B8B8B;'}}">{{company_region?company_region:'省、市、区'}}</text>
            <text style="{{company_address?'':'color:#8B8B8B;'}}">{{company_address?company_address:'详细地址'}}</text>
            <input hidden name="company_address" value='{{company_address}}'></input>
            <input hidden  name="company_loaction" value='{{company_loaction}}'></input>
          </view>
          <view>></view>
        </view>
        <view class='flex-box'>
          <view>
            <text>邮箱</text>
          </view>
          <view>
            <input name="compangy_mail" placeholder='公司邮箱' value='{{compangy_mail}}'></input>
          </view>
          <view>></view>
        </view>
        <view class='flex-box'>
          <view>
            <text>邮编</text>
          </view>
          <view>
            <input name="postcode" placeholder='公司邮编' type="number" value='{{postcode}}'></input>
          </view>
          <view>></view>
        </view>
      </view>
    </scroll-view>
  </view>
  <view class='save-box'>
    <button formType="submit" style="background-color:#00abff;color:#fff;border-radius:0;">保 存</button>
  </view>
</form>