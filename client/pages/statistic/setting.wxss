/* pages/statistic/setting.wxss */

page {
  background: rgba(235, 231, 231, 0.308);
}

.view-box {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 91%; 
}

.setting-scroll {
  width: 100%;
  display: flex;
  flex-direction: column;
  height: 100%;
  margin: 10rpx auto;
}

.info-text {
  font-size: 20px;
  color: #8b8b8b;
  padding-left: 15rpx;
}

.info-box {
  padding: 15rpx;
}

.flex-box {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  border-bottom: #dcdcdc 0.5px solid;
  height: 55px;
  background-color: #fff;
  padding: 10rpx;
}

.flex-box>view:nth-child(1) {
  width: 30%;
  font-size: 18px;
}

.flex-box>view:nth-child(2) {
  text-align: right;
  width: 60%;
  font-size: 15px;
}

.address {
  display: flex;
  flex-direction: column;
  text-align: right;
  width: 60%;
  font-size: 14px;
}

.address>text:nth-child(2) {
  margin: 1px 0px 1px 0px;
  font-size: 13px;
  color: #001;
}

.flex-box>view:nth-child(3) {
  text-align: right;
  width: 10%;
  color: #dcdcdc;
}

.my-avatar {
  width: 84rpx;
  height: 84rpx;
  margin: 10rpx;
  border-radius: 50%;
}

.save-box {
  position: fixed;
  bottom: 0;
  width: 100%;
}
