page {
  background: #fff;
}

.login-box {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.guide-page {
  height: 100%;
  width: 100%;
  position: absolute;
}

.guid-box {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40px;
  font-weight: 800;
}

.restDay {
  color: #fff;
  background: green;
  height: 50%;
  box-sizing: border-box;
  box-shadow: 20px 20px 20px 10px #ccc;
  transform: rotate(-20deg);
  -webkit-transform: rotate(-20deg);
}

.workday {
  color: #fff;
  background: #00abff;
  height: 100%;
  box-sizing: border-box;
  box-shadow: 20px 20px 20px 10px #ccc;
  /* transform: rotate(30deg);
  -webkit-transform: rotate(30deg); */
}

.userinfo-nickname {
  background: #00abff;
