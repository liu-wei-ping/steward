<!--pages/template/traffic.wxml-->
<template name="traffic">
  <view class='route-c'>
    <view class='route-box'>
      <view class='input-view'>
        <view class='route-input start'>
          <image src='' style='width:32px;height:24px'></image>
          <input placeholder="我的位置" data-location='0' value='{{startLocation.name}}' bindfocus='bindfocus'></input>
        </view>
        <view class='line'></view>
        <view class='route-input end'>
          <image src='' style='width:32px;height:24px'></image>
          <input placeholder='输入终点' data-location='1' value="{{endLocation.name}}" bindfocus='bindfocus'></input>
        </view>
      </view>
      <view class='input-view'>
        <image src='' style='width:32px;height:24px'></image>
      </view>
      <view class='input-view'>
        <view class="btn">
          <text>查询</text>
        </view>
      </view>
    </view>
  </view>
  <view class='strategy-box'>
    <scroll-view scroll-x class='s-scroll'>
      <view class="s-item {{trafficInfo.trafficType=='0'?'active':''}}" data-trafficType='0' bindtap='swichTab'>公交</view>
      <view class="s-item {{trafficInfo.trafficType=='1'?'active':''}}" data-trafficType='1' bindtap='swichTab'>自驾</view>
      <view class="s-item {{trafficInfo.trafficType=='2'?'active':''}}" data-trafficType='2' bindtap='swichTab'>骑行</view>
      <view class="s-item {{trafficInfo.trafficType=='3'?'active':''}}" data-trafficType='3' bindtap='swichTab'>步行</view>
    </scroll-view>
  </view>
  <view class='map-box'>
    <map id="navi_map" show-location="{{true}}" longitude="{{startLocation.longitude}}" latitude="{{startLocation.latitude}}" scale="12" markers="{{markers}}" polyline="{{polyline}}">

    </map>
  </view>
  <view class='result-box'>
    <scroll-view scroll-x class='r-scroll'>
      <view class='r-item'>
        <text>我的方案</text>
      </view>
      <!-- <block wx:for="{{trafficInfo.result}}" wx:for-item="item" wx:key="key"> -->
      <view class='r-item'>
        <text>方案1</text>
      </view>
      <view class='r-item'>
        <text>方案2</text>
      </view>
      <view class='r-item'>
        <text>方案3</text>
      </view>
      <view class='r-item'>
        <text>方案4</text>
      </view>
      <view class='r-item'>
        <text>方案5</text>
      </view>
      <view class='r-item'>
        <text>方案6</text>
      </view>
      <!-- </block> -->
    </scroll-view>
  </view>
</template>