<!--pages/template/marquee.wxml-->
<template name="marquee_1">
  <!-- <view>1 显示完后再显示</view>  -->
  <view class="marquee">
    <view class="marquee_box">
      <view class="marquee_text" style="{{orientation}}:{{marqueeDistance}}px;font-size: {{size}}px;color:{{color}};">
        {{text}}
      </view>
    </view>
  </view>
</template>
<template name="marquee_2">
  <view class="marquee">
    <view class="marquee_box">
      <view class="marquee_text" style="{{orientation}}:{{marqueeDistance2}}px;font-size: {{size}}px;">
        <text>{{text}}</text>
        <text wx:if="{{marquee2copy_status}}" style="margin-left:{{marquee2_margin}}px;">{{text}}</text>
      </view>
    </view>
  </view>
</template>