<!--pages/ready/ready.wxml-->
<view class='bar'>
  <view class="btn l-btn active">上 班</view>
  <view bindtap='goToTraffic' class="btn r-btn">路 况</view>
</view>
<import src="../template/marquee.wxml" />
<template is="marquee_{{marqueeType}}" data="{{...marquee}}"></template>
<view class='box'>
  <view class="prepare-box">
    <view class='w-tip'>
      <label>
        {{_timerDate}}
      </label>
    </view>
    <view class='w-box'>
      <view class='view-btn {{btnClass}}' bindtap='startClick'>
        <label>
          {{workStatus}}
        </label>
      </view>
    </view>
    <view class='r-box'>
      <view>
        <image src='../images/早餐.png'></image>
        <input type='digit' placeholder="我的早餐费~"></input>
      </view>
      <view>
        <image src='../images/交通.png'></image>
        <input type='digit' placeholder="我的交通费~"></input>
      </view>
      <view>
        <image src='../images/其他.png'></image>
        <input type='digit' placeholder="其他费用~"></input>
      </view>
      <view class='sub-btn'>
        <view class='view-btn'>
          <text>确定</text>
        </view>
      </view>
    </view>
  </view>
</view>