/* pages/ready/ready.wxss */

.swiper-tab {
  position: fixed;
  display: flex;
  flex-direction: row;
  top: 40;
  width: 100%;
  justify-content: center;
  z-index: 3;
}

.swiper-tab-list {
  width: 30%;
  height: 30px;
  padding: 5px;
  /* opacity: 0.5;  */
  color: #fff;
  font-size: 20px;
  background: #ccc;
  text-align: center;
  border: #ccc 1px solid;
}

.left {
  border-top-left-radius: 30px;
  border-bottom-left-radius: 30px;
}

.right {
  border-top-right-radius: 30px;
  border-bottom-right-radius: 30px;
}

.active {
  background: #39c;
  border: #39c 1px solid;
}

.swiper-box {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.swiper-item-work {
  top: 40px;
}

.item-tips {
  text-align: center;
  height: 20%;
}

.weather-tips {
  display: flex;
  flex-direction: row;
}

.weather-tips-text {
  width: 50%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.weather-tips-text {
  padding-right: 10rpx;
  text-align: right;
}

.weather-tips-data {
  width: 50%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.weather-tips-data {
  padding-left: 10rpx;
  text-align: left;
}

.item-box {
  margin: 10px 10px;
  padding: 20px;
  border: #ccc 1px solid;
  border-radius: 10px;
}

.item-box > view:not(.bottom-box) {
  display: flex;
  flex-direction: row;
  border-bottom: #ccc 1px solid;
  align-items: flex-end;
  margin-bottom: 15px;
}

.item-box image {
  height: 30px;
  width: 30px;
}

.item-box input {
  padding-left: 10rpx;
}

.bottom-box {
  display: flex;
  width: 100%;
  justify-content: flex-end;
}

.btn {
  display: flex;
  width: 80px;
  height: 40px;
  line-height: 40px;
  border-radius: 10px;
  border: #fff 1px solid;
  color: #fff;
  justify-content: center;
  align-items: center;
}

.sub-btn {
  background: #393;
}

.map-box {
  height: 100%;
}

#navi-map {
  width: 100%;
  height: 100%;
}

.navigation {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: fixed;
  height: 40px;
  bottom: 40px;
  left: 0;
  right: 0;
}

.navigation-box {
  display: flex;
  flex-direction: row;
  height: inherit;
  justify-content: center;
  align-items: center;
  background: #fff;
  border-radius: 20px;
}

.navigation-list {
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border: #fff 1px solid;
  font-size: 13px;
  padding: 0px 10px 10px 10px;
}

.nearby {
  padding-left: 15px;
  border-top-left-radius: 20px;
  border-bottom-left-radius: 20px;
}

.route {
  padding: 15px;
  border-radius: 50%;
  background: blue;
}

.newRoute {
  padding-right: 15px;
  border-top-right-radius: 20px;
  border-bottom-right-radius: 20px;
}

