/* pages/ready/ready.wxss */

.box {
  display: flex;
  flex-direction: row;
  /* position: fixed; */
  top: 40;
  width: 100%;
  height: 100%;
  justify-content: center;
}

.prepare-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.traffic-box {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.w-tip {
  height: 30%;
  width: 100%;
  text-align: center;
}

.w-tip label {
  font-size: 50px;
  font-weight: bold;
  color: red;
}

.w-box {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  margin: 5px;
}

.r-box {
  padding: 20px;
  border: #ccc 1px solid;
  border-radius: 10px;
}

.r-box > view:not(.sub-btn) {
  display: flex;
  flex-direction: row;
  border-bottom: #ccc 1px solid;
  align-items: flex-end;
  margin-bottom: 15px;
}

.r-box image {
  height: 30px;
  width: 30px;
}

.r-box input {
  padding-left: 10rpx;
}

.sub-btn {
  display: flex;
  width: 100%;
  justify-content: flex-end;
}

.view-btn {
  display: flex;
  width: 80px;
  height: 40px;
  background: #393;
  border-radius: 10px;
  border: #fff 1px solid;
  line-height: 40px;
  color: #fff;
  justify-content: center;
  align-items: center;
}

.work {
  display: flex;
  min-width: 100px;
  width: auto;
  background: #f96;
  height: auto;
  flex-direction: column;
  justify-content: center;
}

.work label {
  display: flex;
  justify-content: center;
}

.work-on {
  width: 100px;
  background: #393;
}

.p-box {
  height: 40px;
  margin: 10px;
}
