/* pages/ready/ready.wxss */

.swiper-tab {
  display: flex;
  flex-direction: row;
  /* position: fixed; */
  top: 40;
  width: 100%;
  height: 100%;
  justify-content: center;
}

.swiper-tab-list {
  width: 30%;
  height: 30px;
  padding: 5px;
  /* opacity: 0.5;  */
  color: #fff;
  font-size: 20px;
  background: #ccc;
  text-align: center;
  border: #ccc 1px solid;
}

.left {
  border-top-left-radius: 30px;
  border-bottom-left-radius: 30px;
}

.right {
  border-top-right-radius: 30px;
  border-bottom-right-radius: 30px;
}

.active {
  background: #39c;
  border: #39c 1px solid;
}

.swiper-box {
  width: 100%;
  height: inherit;
}

.item-tips {
  text-align: center;
  height: 20%;
}

.weather-tips {
  display: flex;
  flex-direction: row;
}

.weather-tips-text {
  width: 50%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.weather-tips-text {
  padding-right: 10rpx;
  text-align: right;
}

.weather-tips-data {
  width: 50%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.weather-tips-data {
  padding-left: 10rpx;
  text-align: left;
}

.item-box {
  margin: 10px 10px;
  padding: 20px;
  border: #ccc 1px solid;
  border-radius: 10px;
}

.item-box > view:not(.bottom-box) {
  display: flex;
  flex-direction: row;
  border-bottom: #ccc 1px solid;
  align-items: flex-end;
  margin-bottom: 15px;
}

.item-box image {
  height: 30px;
  width: 30px;
}

.item-box input {
  padding-left: 10rpx;
}

.bottom-box {
  display: flex;
  width: 100%;
  justify-content: flex-end;
}

.btn {
  display: flex;
  width: 80px;
  height: 40px;
  line-height: 40px;
  border-radius: 10px;
  border: #fff 1px solid;
  color: #fff;
  justify-content: center;
  align-items: center;
}

.sub-btn {
  background: #393;
}

.map-box {
  height: 70%;
}

#navi-map {
  width: 100%;
  height: 100%;
}

.operation-box {
  display: flex;
  flex-direction: row;
  height: 30%;
}

.opt-tips {
  width: 70%;
}

.opt-way {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 30%;
}

.swich-btn {
  font-size: 13px;
  background: rgb(30, 16, 233);
}

.detail-btn {
  font-size: 13px;
  background: #393;
}
